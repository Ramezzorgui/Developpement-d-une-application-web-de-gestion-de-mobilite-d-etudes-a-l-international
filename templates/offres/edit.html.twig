{% extends 'base.html.twig' %}

{% block title %}Edit Offres{% endblock %}

{% block stylesheets %}
    <style>
        body {
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
        }
        .form-container {
            margin-top: 50px;
            max-width: 600px;
            margin-left: auto;
            margin-right: auto;
            background: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        .form-title {
            margin-bottom: 20px;
            color: #007bff;
            text-align: center;
        }
        .btn-container {
            display: flex;
            justify-content: space-around;
            margin-top: 20px;
        }
        .btn {
            width: 30%;
            padding: 10px;
            border-radius: 5px;
            text-align: center;
            text-decoration: none;
        }
        .btn-secondary {
            background-color: #6c757d;
            color: white;
            border: none;
        }
        .btn-secondary:hover {
            background-color: #5a6268;
        }
        .btn-primary {
            background-color: #007bff;
            color: white;
            border: none;
        }
        .btn-primary:hover {
            background-color: #0056b3;
        }
        .btn-danger {
            background-color: #dc3545;
            color: white;
            border: none;
        }
        .btn-danger:hover {
            background-color: #c82333;
        }
        form {
            display: inline-block;
            margin: 0;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="form-container">
        <h1 class="form-title">Edit Offres</h1>

        {{ include('offres/_form.html.twig', {'button_label': 'Update'}) }}

        <div class="btn-container">
            <a href="{{ path('app_offres_index') }}" class="btn btn-secondary">Back to list</a>
            {{ include('offres/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
