{# templates/offreuser/show.html.twig #}
{% extends 'base.html.twig' %}

{% block stylesheets %}
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f5f5f5;
            margin: 0;
            padding: 0;
        }

        .offer-details {
            max-width: 800px;
            margin: 50px auto;
            padding: 20px;
            background-color: #ffffff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            font-size: 16px;
        }

        .offer-details h1 {
            font-size: 36px;
            margin-bottom: 20px;
            color: #333;
            border-bottom: 3px solid #007bff;
            padding-bottom: 10px;
        }

        .offer-details p {
            margin: 15px 0;
            color: #555;
        }

        .offer-details strong {
            color: #333;
        }

        .btn-back,
        .btn-apply {
            display: inline-block;
            padding: 10px 20px;
            border-radius: 6px;
            text-decoration: none;
            font-size: 16px;
            font-weight: bold;
            transition: background-color 0.3s, color 0.3s;
            margin-top: 20px;
        }

        .btn-back {
            background-color: #007bff;
            color: white;
            margin-right: 10px;
        }

        .btn-back:hover {
            background-color: #0056b3;
        }

        .btn-apply {
            background-color: #28a745;
            color: white;
        }

        .btn-apply:hover {
            background-color: #218838;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="offer-details">
        <h1>{{ offre.title }}</h1>
        <p><strong>Description:</strong> {{ offre.description }}</p>
        <p><strong>Lieu:</strong> {{ offre.lieu }}</p>
        <p><strong>Date:</strong> {{ offre.date }}</p>
        <div>
            <a href="{{ path('user_offreuser_index') }}" class="btn-back">Back to Offers</a>
            <a href="{{ path('user_postulation_postuler', {id: offre.id}) }}" class="btn-apply">Postuler</a>
        </div>
    </div>
{% endblock %}
