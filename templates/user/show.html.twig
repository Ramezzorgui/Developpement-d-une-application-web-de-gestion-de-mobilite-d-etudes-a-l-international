{% extends 'admin.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="text-center mb-4">Détails de l'utilisateur</h1>

        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th scope="row">Email</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th scope="row">Nom</th>
                    <td>{{ user.nom }}</td>
                </tr>
                <tr>
                    <th scope="row">Prénom</th>
                    <td>{{ user.prenom }}</td>
                </tr>
                <tr>
                    <th scope="row">Role</th>
                    <td>{{ user.roles | join(', ') }}</td> <!-- Convert array to string -->
                </tr>
                <tr>
                    <th scope="row">Password</th>
                    <td>{{ user.password }}</td>
                </tr>
            </tbody>
        </table>

        <div class="text-center">
            <a href="{{ path('app_user_index') }}" class="btn btn-primary mr-2">Retour à la liste</a>
            <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-success mr-2">Modifier</a>
            {{ include('user/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
