{{ form_start(form, {'attr': {'class': 'custom-form'}}) }}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card custom-card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">Créer Nouveau Résultat</h3>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        {{ form_label(form.user, null, {'label_attr': {'class': 'form-label custom-label'}}) }}
                        {{ form_widget(form.user, {'attr': {'class': 'form-control custom-input'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.status, null, {'label_attr': {'class': 'form-label custom-label'}}) }}
                        {{ form_widget(form.status, {'attr': {'class': 'form-control custom-input'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.date, null, {'label_attr': {'class': 'form-label custom-label'}}) }}
                        {{ form_widget(form.date, {'attr': {'class': 'form-control custom-input'}}) }}
                    </div>
                    <div class="text-center mt-4">
                        <button type="submit" class="btn btn-success custom-button">{{ button_label|default('Save') }}</button>
                    </div>
                </div>
            </div>
            <div class="text-center mt-3">
                <a href="{{ path('app_resultat_index') }}" class="btn btn-secondary">Retour à la Liste</a>
            </div>
        </div>
    </div>
</div>
{{ form_end(form) }}
