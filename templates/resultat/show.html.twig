{% extends 'base.html.twig' %}

{% block title %}Resultat{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Détails du Résultat</h1>

        <table class="table table-bordered table-striped">
            <tbody>
                <tr>
                    <th>ID</th>
                    <td>{{ resultat.id }}</td>
                </tr>
                <tr>
                    <th>Status</th>
                    <td>{{ resultat.status }}</td>
                </tr>
                <tr>
                    <th>Date</th>
                    <td>{{ resultat.date ? resultat.date|date('Y-m-d H:i:s') : 'N/A' }}</td>
                </tr>
            </tbody>
        </table>

        <div class="mt-3">
            <a href="{{ path('app_resultat_index') }}" class="btn btn-secondary">Retour à la Liste</a>
            <a href="{{ path('app_resultat_edit', {'id': resultat.id}) }}" class="btn btn-warning">Modifier</a>
        </div>

        {{ include('resultat/_delete_form.html.twig') }}
    </div>
{% endblock %}
