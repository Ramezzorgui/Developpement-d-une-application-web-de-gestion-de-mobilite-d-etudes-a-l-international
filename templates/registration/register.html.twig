{% block javascripts %}
<script src="{{ asset('admin/assets/libs/jquery/dist/jquery.min.js')}}"></script>
<script src="{{ asset('admin/assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js')}}"></script>
<script src="{{ asset('admin/assets/js/sidebarmenu.js')}}"></script>
<script src="{{ asset('admin/assets/js/app.min.js')}}"></script>
<script src="{{ asset('admin/assets/libs/simplebar/dist/simplebar.js')}}"></script>
{% endblock %}

<div class="body-wrapper">
<section class="inscription" style="background-color: #f8f9fa;">
  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-lg-6 col-md-8 col-sm-10">
        <div class="card shadow-lg border-0">
          <div class="card-header bg-primary text-white text-center">
            <h2 class="titre-formulaire">Ajouter</h2>
          </div>
          <div class="card-body">
            {{ form_start(registrationForm, {'attr': {'class': 'form-inscription', 'id': 'form-inscription'}}) }}
            <div class="form-group mb-3">
              {{ form_widget(registrationForm.nom, {'attr': {'class': 'form-control', 'placeholder': 'Votre Nom'}}) }}
            </div>
            <div class="form-group mb-3">
              {{ form_widget(registrationForm.prenom, {'attr': {'class': 'form-control', 'placeholder': 'Votre Pr√©nom'}}) }}
            </div>
            <div class="form-group mb-3">
              {{ form_widget(registrationForm.identifiant, {'attr': {'class': 'form-control', 'placeholder': 'Votre Identifiant'}}) }}
            </div>
            <div class="form-group mb-3">
              {{ form_widget(registrationForm.classe, {'attr': {'class': 'form-control', 'placeholder': 'Votre classe'}}) }}
            </div>
            <div class="form-group mb-3">
              {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Votre email'}}) }}
            </div>
            <div class="form-group mb-3">
              <div class="input-group">
                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control', 'placeholder': 'Mot de Passe'}}) }}
              </div>
            </div>
            <div class="form-group text-center">
              <button type="submit" name="inscription" id="inscription" class="btn btn-primary btn-block">Ajouter</button>
            </div>
            {{ form_end(registrationForm) }}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
document.getElementById('togglePassword').addEventListener('click', function () {
  var passwordField = document.getElementById('registration_form_plainPassword');
  var toggleButton = this;
  if (passwordField.type === 'password') {
    passwordField.type = 'text';
    toggleButton.innerHTML = '<i class="fas fa-eye-slash"></i>';
  } else {
    passwordField.type = 'password';
    toggleButton.innerHTML = '<i class="fas fa-eye"></i>';
  }
});
</script>
{% endblock %}
